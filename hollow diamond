#include <stdio.h>
int main()
{
    int rows = 5;
    for (int i = 0; i < rows; i++)
    {
        for (int j = 0; j <= 2 * rows - 1; j++)
        {
            if (j == rows - i || j == rows + i )
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }
        printf("\n");
    }
    rows=4;
    for (int i = 0; i < rows; i++)
    {printf("  ");
        for (int j = 0; j <= 2 * rows - 1; j++)
        {
            if (j == i || j == 2 * rows - i - 2)
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}
